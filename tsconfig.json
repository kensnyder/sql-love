{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "noEmit": false,
    "pretty": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
	"types": ["vitest/globals"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": ["index.ts"]
}
