{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleDetection": "force",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "noEmit": false,
    "pretty": true,
    "isolatedModules": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "files": ["index.ts"]
}
